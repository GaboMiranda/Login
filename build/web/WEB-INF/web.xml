<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>inicioSesion</servlet-name>
        <servlet-class>modelo.inicioSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registrarUsuarios</servlet-name>
        <servlet-class>modelo.registrarUsuarios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cerrarSesion</servlet-name>
        <servlet-class>modelo.cerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>notFound</servlet-name>
        <servlet-class>modelo.notFound</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>inicioSesion</servlet-name>
        <url-pattern>/iniciar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registrarUsuarios</servlet-name>
        <url-pattern>/nuevoUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cerrarSesion</servlet-name>
        <url-pattern>/salir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>notFound</servlet-name>
        <url-pattern>/urlNotFound</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/urlNotFound</location>
    </error-page>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
